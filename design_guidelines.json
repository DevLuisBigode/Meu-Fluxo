{
  "design_system": {
    "identity": {
      "name": "Meu Fluxo",
      "persona": "E1: The Anti-AI Designer",
      "core_concept": "Organic Wealth & Fluid Control",
      "emotional_tone": "Empowering, Clear, Fluid, Non-judgmental"
    },
    "typography": {
      "font_family": {
        "headings": "Manrope, sans-serif",
        "body": "Outfit, sans-serif",
        "mono": "JetBrains Mono, monospace"
      },
      "weights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "bold": 700,
        "black": 900
      },
      "scale": {
        "h1": "text-5xl md:text-6xl tracking-tight font-bold",
        "h2": "text-3xl md:text-4xl tracking-tight font-bold",
        "h3": "text-2xl font-semibold tracking-tight",
        "body_lg": "text-lg leading-relaxed",
        "body_base": "text-base leading-relaxed",
        "caption": "text-sm text-muted-foreground uppercase tracking-widest"
      },
      "import_url": "https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700;800&family=Outfit:wght@300;400;500;700&display=swap"
    },
    "colors": {
      "palette": {
        "light": {
          "background": "#FAFAF9",
          "foreground": "#1C1917",
          "card": "#FFFFFF",
          "card_foreground": "#1C1917",
          "primary": "#064E3B",
          "primary_foreground": "#ECFDF5",
          "secondary": "#E7E5E4",
          "secondary_foreground": "#1C1917",
          "accent": "#10B981",
          "accent_foreground": "#FFFFFF",
          "destructive": "#EF4444",
          "destructive_foreground": "#FFFFFF",
          "border": "#E7E5E4",
          "input": "#E7E5E4",
          "ring": "#064E3B"
        },
        "dark": {
          "background": "#0C0A09",
          "foreground": "#FAFAF9",
          "card": "#1C1917",
          "card_foreground": "#FAFAF9",
          "primary": "#34D399",
          "primary_foreground": "#064E3B",
          "secondary": "#292524",
          "secondary_foreground": "#FAFAF9",
          "accent": "#10B981",
          "accent_foreground": "#FFFFFF",
          "destructive": "#F87171",
          "destructive_foreground": "#FFFFFF",
          "border": "#292524",
          "input": "#292524",
          "ring": "#34D399"
        }
      },
      "usage": {
        "positive_flow": "text-emerald-600 dark:text-emerald-400",
        "negative_flow": "text-rose-600 dark:text-rose-400",
        "neutral_flow": "text-stone-500"
      }
    },
    "layout": {
      "grid_system": "Bento Grid (Mode A: Tetris)",
      "spacing": {
        "container_padding": "p-6 md:p-12",
        "section_gap": "gap-8 md:gap-12",
        "card_padding": "p-6"
      },
      "radius": {
        "default": "rounded-2xl",
        "card": "rounded-3xl",
        "button": "rounded-full"
      }
    },
    "visual_enhancers": {
      "shadows": {
        "card": "shadow-[0_8px_30px_rgb(0,0,0,0.04)]",
        "hover": "hover:shadow-[0_8px_30px_rgb(0,0,0,0.12)] hover:-translate-y-1 transition-all duration-300"
      },
      "glassmorphism": {
        "light": "bg-white/70 backdrop-blur-xl border border-white/20",
        "dark": "bg-black/60 backdrop-blur-xl border border-white/10"
      },
      "gradients": {
        "hero_text": "bg-clip-text text-transparent bg-gradient-to-r from-emerald-600 to-teal-500",
        "card_border": "bg-gradient-to-br from-white/50 to-transparent"
      }
    },
    "components": {
      "buttons": {
        "primary": "bg-primary text-primary-foreground hover:bg-primary/90 rounded-full px-8 py-6 font-bold shadow-lg hover:shadow-xl transition-all",
        "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80 rounded-full px-6 py-4 font-medium",
        "ghost": "hover:bg-accent/10 hover:text-accent rounded-full px-4 py-2"
      },
      "cards": {
        "base": "bg-card text-card-foreground rounded-3xl border border-border/50 shadow-sm overflow-hidden relative",
        "interactive": "cursor-pointer hover:border-primary/20 transition-colors"
      },
      "inputs": {
        "base": "bg-transparent border-b-2 border-border focus:border-primary focus:ring-0 rounded-none px-0 py-4 text-lg font-medium placeholder:text-muted-foreground/50 transition-colors"
      }
    },
    "motion": {
      "transitions": "transition-all duration-300 ease-out",
      "animations": {
        "fade_in": "animate-in fade-in duration-500",
        "slide_up": "animate-in slide-in-from-bottom-4 duration-500",
        "scale_in": "animate-in zoom-in-95 duration-300"
      }
    },
    "assets": {
      "images": {
        "hero_bg": {
          "url": "https://images.unsplash.com/photo-1734039176189-595c31ab926a?crop=entropy&cs=srgb&fm=jpg&q=85",
          "alt": "Abstract fluid green paint swirl",
          "usage": "Hero section background or subtle overlay"
        },
        "growth_concept": {
          "url": "https://images.unsplash.com/photo-1579621970343-21c491b3f363?crop=entropy&cs=srgb&fm=jpg&q=85",
          "alt": "Plant growing from coins",
          "usage": "Financial tips section or savings goal card"
        },
        "wealth_texture": {
          "url": "https://images.unsplash.com/photo-1631663027473-3671aa7c4503?crop=entropy&cs=srgb&fm=jpg&q=85",
          "alt": "Green silk texture",
          "usage": "Premium/Pro feature cards background"
        }
      },
      "icons": {
        "library": "lucide-react",
        "style": "Stroke width 1.5px, rounded caps"
      }
    }
  },
  "implementation_guide": {
    "steps": [
      "1. Setup Tailwind config with new colors and fonts.",
      "2. Create the 'Bento Grid' layout component.",
      "3. Build the 'Weekly Counter' hero component with dynamic coloring.",
      "4. Implement the Transaction List with 'Swipe' or 'Hover' actions.",
      "5. Integrate AI Tips card with glassmorphism.",
      "6. Ensure all inputs use the custom 'Underline' style defined in components."
    ],
    "rules": [
      "DO NOT use default Shadcn cards without adding the 'rounded-3xl' class.",
      "DO NOT use standard table layouts for mobile; use stacked cards.",
      "ALWAYS use the 'Manrope' font for numbers and headings.",
      "ENSURE the 'Weekly Counter' turns RED if balance < 0 and GREEN if balance > 0."
    ]
  },
  "universal_guidelines": {
    "general": [
      "Avoid generic AI slop aesthetics.",
      "Use 2-3x more spacing than typical.",
      "Every interaction needs micro-animations.",
      "Use 'sonner' for toasts.",
      "All interactive elements MUST include data-testid."
    ]
  }
}